<h1>Messengers#index</h1>
<p>Find me in app/views/messengers/index.html.erb</p>
<%= link_to "New Contact", new_messenger_path%>

<ul>
  <% @messengers.each do |messenger| %>
      <li>
        <%= User.find_by(id: messenger.to_user_id).username %>
        <%= link_to "Send a message" , private_message_path(messenger) %>
        <%= link_to "Delete" , messenger_path(messenger), data: {
          turbo_method: :delete,
          turbo_confirm: "Are you sure?"
        } %>
      </li>
  <% end %>
</ul>