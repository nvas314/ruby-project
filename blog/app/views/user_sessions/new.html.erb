<h1>Login:</h1>

<%= form_with model: @user do |form| %>
    <div>
      <%= form.label :username %><br>
      <%= form.text_field :username %>
    </div>
  
    <div>
      <%= form.label :password %><br>
      <%= form.text_field :password %><br>
    </div>
    
    <div>
      <%= form.submit %>
    </div>
  <% end %>


  <% flash.each do |type, msg| %>
    <div>
      <%= msg %>
    </div>
  <% end %>
  