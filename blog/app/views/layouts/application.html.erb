<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body style="background:gray">

  <%= render partial: 'shared/header' %>

  <div class="container h-100" style="background:white;height: 100%;min-height: 0px;  ">
  <div class="mx-auto p-2">
    <%= yield %>
  </div>
  </div>  

</body>

<script>
var modal //the modal we selected

window.onclick = function(event) { //close modal from outer window
  if (event.target == modal) {
    modal.style.display = "none";
  }
}

function modal_d(f){ //open modal
  modal = document.getElementById("myModal"+f);
  modal.style.display = "block";
}

$(function(){ //close modal from x
   $("span.close").click(function(e){
     modal.style.display = "none";
   });
});
</script>
</html>
