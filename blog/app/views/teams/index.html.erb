<h1>Teams#index</h1>
<p>Find me in app/views/teams/index.html.erb</p>

<h1>Teams</h1>

<ul>
  <% @teams.each do |team| %>
  <%if team.status == "public" %>
      <li>
      <%= team.title%> -> <%= link_to "join", team %>
      <%if team.owner_id == session[:user_id]%>
      Owner
      <%elsif !UserTeam.where(user_id:session[:user_id],team_id:team.id).blank?%>
      Joined
      <% end %>
      </li>
  <% end %>
  <% end %>
</ul>

<%= link_to "New Team", new_team_path %> <br>
<%= link_to "Start", root_path %> <br>

